/* pages/home/home.wxss */
.top {
  display: flex;
  /* background-color: brown; */
  /* width: 100%; */
  height: 50px;
  justify-content: space-between;
  padding-left: 10px;
  padding-right: 10px;
}

.user {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 30%;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 10px;
}

.user text:nth-of-type(2) {
  color: blue;
  /* background-color: coral; */
  font-weight: bolder;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.search{
  display: flex;
  align-items: center;
  width: 65%;
  height: 50px;
  position: relative;
  /* background-color: sienna; */
}

.search view:nth-of-type(1) .inp{
  background-color: rgb(247, 247, 247);
  font-size: 12px;
  border-radius: 20px;
  padding: 5px 30px;
}

.search view:nth-of-type(2) .ico{
  width: 20px;
  height: 20px;
  position: absolute;
  top: 50%;
  left: 10px;
  margin-top: -12px;
}

.swi{
  height: 200px;
  position: relative;
}

.a1{
  /* display: block; */
  width: 100%;
  height: 100%;
}

.indication{
  /* height: 10px; */
  width: 50px;
  display: flex;
  justify-content: space-between;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -25px;
}
.dian{
  width: 10px;
  height: 10px;
  background-color: rgb(193, 188, 214);
  border-radius: 5px;
  /* display: inline; */
  display: flex;
  align-items: center;
}
.dianactive{
  background-color: rgb(54, 5, 253);
}

