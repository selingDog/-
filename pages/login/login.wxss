/* pages/login/login.wxss */
.main{
  padding: 10px;
}
.myiput{
  width: 100%;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
  height: 50px;
}
.myiput .text{
  display: inline-block;
  width: 30%;
  height: 50px;
  font-size: 14px;
  line-height: 50px;
  color: #646566;
}
.input{
  width: 60%;
  height: 50px;
  font-size: 12px;
  text-indent: 10px;
}
.forget{
  text-align: right;
  color: #666666;
  padding: 20px 0;
}
.btn{
  margin-top: 40px;
}
.btn .btn1 button,.btn .btn2 button{
  width: 100%;
  background-color: #0c34ba;
  height: 40px;
  line-height: 40px;
  color: #ffffff;
  border-radius: 100px;
  font-size: 12px;
  margin-top: 50px;
}
.btn2 button{
  color: #323233 !important; 
  background-color: #ffffff !important;
}
.wcm .text{
  font-size: 32px;
  color: #444444;
  font-family: Georgia, 'Times New Roman', Times,serif;
}
.wcm{
  padding: 30px 0 40px 0;
}
.wem .text{
  color: #999999;
  font-family: Georgia, 'Times New Roman', Times,serif;
}